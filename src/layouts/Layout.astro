---
interface Props {
  title: string
}
const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon_asiseg.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: 'Inter var', system-ui, sans-serif;
      }
      body {
        --focus-ring: 0 0 0 1px #03989e;
        --primary-color: #03989e;
        --highlight-text-color: #03989e;
        /* background-color: rgb(248 250 252); */
      }
      .p-inputtext {
        box-shadow: 0 0 0 1px #a6a6a6;
        opacity: 50;
        outline: none;
        padding-inline-start: 0.5rem;
      }
      .p-inputtext:focus-visible {
        box-shadow: 0 0 0 1px #03989e;
        outline: none;
      }
      .asiseg_input {
        box-shadow: 0 0 0 1px #a6a6a6;
        opacity: 50;
        outline: none;
      }
      .asiseg_input:focus-visible {
        box-shadow: 0 0 0 1px #03989e;
        outline: none;
      }
    </style>
  </body>
</html>
